<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#c30000"
    android:padding="16dp"
    xmlns:tools="http://schemas.android.com/tools">
    <VideoView
        android:id="@+id/video_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/god_names"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"/>


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/video_view">

        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/shri"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                app:cardCornerRadius="10dp"
                app:contentPadding="16dp"
                app:cardBackgroundColor="@color/maroon"
                android:layout_margin="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="जय श्री श्याम !!"
                    android:textColor="#fff"
                    android:textSize="24dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/god_card"
                android:layout_margin="10dp"
                android:padding="16dp"
                android:elevation="6dp"
                android:textStyle="bold"
                android:layout_below="@+id/shri"
                android:layout_width="match_parent"
                app:cardCornerRadius="10dp"
                android:layout_height="wrap_content">
            <TextView
                android:id="@+id/god_names"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="#fff"
                android:padding="10dp"
                android:text="Apple"
                android:textAlignment="center"
                android:textColor="@color/maroon"
                android:textSize="24dp"
                tools:ignore="HardcodedText,SpUsage" />
            </androidx.cardview.widget.CardView>
            <ImageView
                android:id="@+id/god_image"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_margin="10dp"
                android:layout_below="@+id/god_card"
                android:layout_centerHorizontal="true"
                android:src="@raw/ksmain"
                tools:ignore="ContentDescription" />
    <TextView
        android:id="@+id/god_lyrics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/god_image"
        android:text="Apple"
        android:padding="16dp"
        android:textSize="24sp"
        android:textColor="#fff"
        android:textAlignment="center"
        tools:ignore="HardcodedText,SpUsage" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
